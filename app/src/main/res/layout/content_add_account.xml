<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.niko.whatsacc.AddAccountActivity"
    tools:showIn="@layout/activity_add_account">

    <TextView
        android:id="@+id/tagname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acc_name"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagname"
        android:inputType="textPersonName|textCapWords"/>
    <TextView
        android:id="@+id/tagnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acc_number"
        android:layout_below="@id/name"/>
    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagnumber"
        android:inputType="textCapCharacters"
        android:singleLine="true"/>
    <Button
        android:id="@+id/button_add"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_alignParentRight="true"
        android:text="@string/add"
        android:onClick="newAccount"/>
    <Button
        android:id="@+id/button_cancel"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_toLeftOf="@id/button_add"
        android:text="@string/cancel"
        android:onClick="cancel"/>

</RelativeLayout>
